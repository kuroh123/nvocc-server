# NVOCC Platform Server Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Replace with your actual PostgreSQL connection details
DATABASE_URL="postgresql://postgres:password@localhost:5432/nvocc_platform?schema=public"

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_SECRET="nvocc-jwt-secret-key-change-in-production-very-long-and-secure"
JWT_REFRESH_SECRET="nvocc-refresh-jwt-secret-key-change-in-production-very-long-and-secure"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Configuration
APP_NAME="NVOCC Platform"
APP_ABBR="NVOCC"
WEBSITE_URL="http://localhost:3000"
EMAIL="admin@nvocc.com"

# Email Configuration (Optional - for future features)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# Features Configuration
ACTIVATION=true
RESEND_ACTIVATION_THRESHOLD=60

# Legacy Configuration (keep for compatibility)
LANGUAGE="models/languages/en.php"
TEMPLATE="models/site-templates/default.css"
